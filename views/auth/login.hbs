<div class="container vh-100"> 
    <div class="d-flex justify-content-center h-40 mt-5">
        <div class="card text-black" style="border-radius: 25px; background-color: rgba(255, 255, 255, 0.5);">
            <div class="card-body">
                <form class="needs-validation" action="/login" method="POST">
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        <input type="text" class="form-control" placeholder="Username" name="username">
                    </div>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <input type="password" class="form-control" name="password" placeholder="Password" required>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-primary btn-lg">
                    </div>
                    
                    {{#if errorMessage}}
                    <p class="error mt-3">{{errorMessage}}</p>
                    {{/if}}
                </form>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-center links">
                    Don't have an account?&nbsp;<a href="/signup"> Sign Up</a>
                </div>
            </div>
        </div>
    </div>
</div>
