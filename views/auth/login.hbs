<body style="background-image: url('/images/login_page.png'); background-size: cover;">

    <div class="container">
        <div class="d-flex justify-content-center h-100 mt-5">
            <div class="card" style="background-color: rgba(255, 255, 255, 0.5);">
                <div class="card-header">
                    <h3>Account Login</h3>
                </div>
                <div class="card-body">
                    <form class="needs-validation" action="/login" method="POST">
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input type="text" class="form-control" placeholder="Username" name="username">

                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input type="password" class="form-control" name="password" placeholder="Password" required>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Login" class="btn float-right login_btn">
                        </div>
                        {{#if errorMessage}}
                        <p class="error mt-3">{{errorMessage}}</p>
                        {{/if}}
                    </form>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-center links">
                        Don't have an account?&nbsp;<a href="/signup"> Sign Up</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>