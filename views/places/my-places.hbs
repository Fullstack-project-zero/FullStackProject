{{!-- my-places.hbs --}}

<div class="container pt-4 pb-4">
  {{#each userPlaces}}
    <div class="row">
      <div class="col-md-6">
        <img src="{{img}}" alt="{{name}}" class="img-fluid rounded">
      </div>
      <div class="col-md-6">
        <h2>{{name}}</h2>
        <h3>Location</h3>
        <p>{{location}}</p>
        <h3>Description</h3>
        <p>{{description}}</p>
        <div class="d-flex">
          <form action="/places/{{_id}}/edit">
            <button type="submit" class="btn btn-md mx-2" style="background-color: #045337c1; color: #fff; border-radius: 15px;">Edit</button>
          </form>
          <form action="/places/{{_id}}/delete" method="post">
            <button type="submit" class="btn btn-md btn-danger mx-2" style=" color: #fff; border-radius: 15px;">Delete</button>
          </form>
        </div>
      </div>
    </div>
    <hr class="my-10">
  {{/each}}
</div>


