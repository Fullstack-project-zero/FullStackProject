<div class="text-center my-2">
  <h2 class="card-title">List of Places</h2>
</div>

<section id="places">
  <div class="row">
    {{#each places}}
    <div class="col-lg">
      <div class="card border-primary rounded-lg mx-4 my-3 h-100">
        <img class="card-img-top img-fluid p-3" src="{{img}}" alt="{{name}}" style="height: 30vh;">
        <div class="card-body">
          <h5 class="card-title"><a href="/places/{{_id}}">{{name}}</a></h5>
          {{#each author}}
          <p class="card-text">Created by {{this.username}}</p>
          {{/each}}
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</section>