  <div class="container mt-4">
    <div class="row mx-0">
        {{#each places}}
        <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
          <div class="card rounded-lg mx-4 my-3 h-100 shadow" style="border: #c6f6e5c1">
            <img class="card-img-top img-fluid p-3 rounded" src="{{img}}" alt="{{name}}" style="height: 40vh;">
            <div class="card-body">
              <h5 class="card-title font-weight-bold"><a href="/places/{{_id}}" style="color: #045337c1">{{name}}</a></h5>
              <h6 class="card-title">{{title}}</a></h6>
              {{#each author}}
              <p class="card-text">Created by {{this.username}}</p>
              {{/each}}
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
