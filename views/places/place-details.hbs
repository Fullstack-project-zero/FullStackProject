  <div class="container mt-5">
    <div class="row">
      <div class="col-md-6">
        <img src="{{places.img}}" class="img-fluid rounded shadow" alt="Place Image">
      </div>
      <div class="col-md-6">
        <h1>{{places.name}}</h1>
        <div id="likeContainer" class="container row align-items-center justify-content-end">
          <span class="timer counter alt-font appear d-inline pr-2" data-to="980" data-speed="7000">{{places.likes.length}}</span>
          <form action="/places/{{places._id}}/like" method="POST" class="d-flex align-items-center d-inline">
            <button type="submit" class="btn btn-outline-danger btn-floating btn-custom px-2 py-1">
              <i class="fas fa-heart"></i>
            </button>
          </form>
        </div>
        <div class="mb-3">
          <h5>Description</h5>
          <p>{{places.source}}</p>
        </div>
        <div class="mt-3 mb-3">
          <h5>Description</h5>
          <p>{{places.title}}</p>
        </div>
        <div class="mt-3 mb-3">
          <h5>Location</h5>
          <a href="https://maps.google.com/?q={{places.location}}" class="text-dark">{{places.location}}</a>
        </div>
        <div class="mt-3 mb-3">
          <h5>Description</h5>
          <p>{{places.description}}</p>
        </div>
        <div class="mt-3 mb-3">
          <h5>Author</h5>
          {{#each places.author}}
          <p>Created by {{this.username}}</p>
          {{/each}}
        </div>
      </div>
    </div>
  </div>