  <div class="container mt-5">
    <div class="row">
      <div class="col-md-6">
        <img src="{{places.img}}" class="img-fluid rounded shadow" alt="Place Image">
      </div>
      <div class="col-md-6">
        <h1>{{places.name}}</h1>
        <span class="timer counter alt-font appear" data-to="980" data-speed="7000">{{places.likes.length}}</span>
        <form action="/places/{{places._id}}/like" method="POST" class="d-flex align-items-center">
          <button type="submit" class="btn btn-outline-danger btn-floating btn-custom">
            <i class="fas fa-heart"></i>
          </button>
        </form>
        <div class="mt-3 mb-3">
          <h5>Location</h5>
          <a href="https://maps.google.com/?q={{places.location}}">{{places.location}}</a>
        </div>
        <div class="mt-3 mb-3">
          <h5>Description</h5>
          <p>{{places.description}}</p>
        </div>
        <div class="mt-3 mb-3">
          <h5>Author</h5>
          {{#each places.author}}
          <p>Created by {{this.username}}</p>
          {{/each}}
        </div>
      </div>
    </div>
  </div>