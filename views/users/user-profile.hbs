{{#if userInSession}}

<div class="mx-5 mt-md-5 d-flex justify-content-between mb-3">
  <div>
    <h2 class="mt-3 d-none d-sm-block">Hello, {{userInSession.username}}!</h2>
    <p id="quote"></p>
  </div>
  
  <div class="mt-3">
    <form id="logout-form" action="/logout" method="POST">
      <button type="submit" class="btn btn-md" style="background-color: #045337c1; color: #fff; border-radius: 15px;">Logout</button>
    </form>
    <form action="/user-profile/edit">
      <button type="submit" class="btn btn-md mx-2 mt-2" style="background-color: #045337c1; color: #fff; border-radius: 15px;">Edit Profile</button>
    </form>
  </div>
</div>

<div class="container h-100">
  <div class="row d-flex justify-content-center align-items-center h-100" style='display:none'>
    <div class="col col-lg-9 col-xl-7">
      <div class="card" style="background-color:#04533700; border:0">
        <div class="rounded-top text-black d-flex flex-row h-200" style="background-image: url('/images/signuphead.jpg'); background-size: cover;">
          <div style="background-color: rgba(71, 69, 69, 0.562)" class="row h-100 p-3 m-3 d-flex align-items-end">
            <div class="ms-4 mt-5 d-flex flex-column ml-3" style="width: 150px">
            <img src="{{userInSession.img}}" alt="My profile picture." class="img-fluid img-thumbnail mt-4 mb-2" style="width: 150px; z-index: 1">
            </div>
          <div class="ms-3 ml-3 text-light font-weight-bold">
            <div class="mt-auto">
                <h5 class="">{{userInSession.username}}</h5>
                <p>{{userInSession.country}}</p>
            </div>
        </div>
    </div>
</div>
        
        <div class="card-body p-4 text-black">
          <div class="mb-5 mt-5">
          </div>
        </div>
          
          <div class="row g-3">
            <div class="col mb-3">
              <a href="/places" class="font-italic mb-1 text-dark"><img src="./images/favouritespots.jpg"
                alt="image 1" class="w-100 rounded-3"></a>
            </div>
          </div>
          <div class="row g-3">
            <div class="col mb-3">
              <a href="/places/create" class="font-italic mb-1 text-dark"><img src="./images/createpinned.jpg"
                alt="image 1" class="w-100 rounded-3"></a>
            </div>
          </div>
          <div class="row g-3">
            <div class="col mb-3">
              <a href="/places/my-places/{{userInSession._id}}" class="font-italic mb-1 text-dark"><img src="./images/owncreations.jpg"
                alt="image 1" class="w-100 rounded-3"></a> 
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
</div>

<script src="/js/helloQuotes.js"></script>
  

{{else}}
<div class="container vh-100"> 
    <div class="d-flex justify-content-center h-40 mt-5" >
        <div class="card text-black" style="border-radius: 25px; background-color: rgba(255, 255, 255, 0.5);">
            <div class="card-body">
                  <form class="needs-validation" action="/login" method="POST">
                      <div class="input-group form-group">
                          <div class="input-group-prepend">
                              <span class="input-group-text"><i class="fas fa-user"></i></span>
                          </div>
                          <input type="text" class="form-control" placeholder="Username" name="username">
                      </div>
                      <div class="input-group form-group pb-3">
                          <div class="input-group-prepend">
                              <span class="input-group-text"><i class="fas fa-key"></i></span>
                          </div>
                          <input type="password" class="form-control" name="password" placeholder="********" required>
                      </div>
                      <div class="form-group d-flex justify-content-center links mt-3 mb-3">
                          <input type="submit" value="Login" class="btn btn-md" style="background-color: #045337c1; color: #f3f7f5; border-radius: 15px;">
                      </div>
                      
                      {{#if errorMessage}}
                      <p class="error mt-3">{{errorMessage}}</p>
                      {{/if}}
                  </form>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-center links">
                    Don't have an account?&nbsp;<a href="/signup"> Sign Up</a>
                </div>
            </div>
        </div>
    </div>
</div>
{{/if}}

